<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_markEria"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/substitute2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_markNumMonth"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="8"
            android:textSize="24sp"
            android:textColor="@color/substitute1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="@string/mark_slash"
            android:textSize="24sp"
            android:textColor="@color/substitute1"/>

        <TextView
            android:id="@+id/tv_markNumTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:fontFamily="serif"
            android:text="24"
            android:textSize="24sp"
            android:textColor="@color/substitute1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:gravity="bottom"
            android:fontFamily="serif"
            android:text="@string/mark_unit"
            android:textSize="16sp"
            android:textColor="@color/substitute1"/>

    </LinearLayout>
</LinearLayout>

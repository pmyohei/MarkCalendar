<resources xmlns:tools="http://schemas.android.com/tools">

    <!--  ツールバー  -->
    <!--  アクションバーなしのスタイルをカスタム  -->
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--  アプリ全体にフォントを適用  -->
        <item name="android:typeface">serif</item>
    </style>
    <!--  タイトル文字列のデザイン設定  -->
    <!--  ※デフォルトの文字サイズは20dp(abc_text_size_title_material_toolbar)  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/substitute_middle</item>
    </style>
    <!--  戻るボタン用デザイン設定  -->
    <style name="Toolbar.ToolbarTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/substitute_middle</item>
        <item name="android:textColorSecondary">@color/substitute_middle</item>
    </style>

    <!--  AlertDialog  -->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--  ボタンカラー -->
        <item name="colorAccent">@color/substitute_dark</item>
        <!--  背景色 -->
        <item name="android:background">@color/substitute_middle</item>
        <!--  テキストカラー -->
        <item name="android:textColorPrimary">@color/substitute_dark</item>
        <!--  フォント -->
        <item name="android:typeface">serif</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.MarkCalendar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/substitute_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/substitute_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/substitute_dark</item>
        <item name="colorSecondaryVariant">@color/substitute_dark</item>
        <item name="colorOnSecondary">@color/substitute_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
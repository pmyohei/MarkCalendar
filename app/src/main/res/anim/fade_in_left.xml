<?xml version="1.0" encoding="utf-8"?>
<!-- 左方向へ切り替わるフェードインアニメーション -->
<set
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillAfter="true">

    <translate
        android:duration="100"
        android:fromXDelta="100%"
        android:toXDelta="0" />

    <alpha
        android:duration="100"
        android:fromAlpha="0.0"
        android:toAlpha="1.0" />

</set>